{% extends 'base.html.twig' %}

{% block title %}document{% endblock %}

{% block body %}
<div class="w-11/12 lg:w-3/5 mx-auto">
    
    <section class="my-3 border border-gray-300 shadow-lg p-3">
        <h2 class="mb-3 text-xl font-semibold">Liste des Documents</h2>
        <table class="min-w-full">
            <thead>
                <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
                    <th class="py-3 lg:px-6 text-left">Nom</th>
                    <th class="py-3 lg:px-6 text-left">Marque</th>
                    <th class="py-3 lg:px-6 text-center">Quantité</th>
                    <th class="py-3 lg:px-6 text-center">Disponibilité</th>
                </tr>
            </thead>
            <tbody class="text-gray-600 text-sm font-light">
                <tr class="border-b border-gray-200 hover:bg-gray-100">
                    <td class="py-3 lg:px-6 text-left whitespace-nowrap">
                        <div class="flex items-center">
                            <span class="font-medium">React Project</span>
                        </div>
                    </td>
                    <td class="py-3 lg:px-6 text-left">
                        <div class="flex items-center">
                            <span>Eshal Rosas</span>
                        </div>
                    </td>
                    <td class="py-3 lg:px-6 text-center">
                        <span>11 jan 2021</span>
                    </td>
                    <td class="py-3 px-6 text-center">
                        <span class="bg-purple-200 text-purple-600 py-1 px-3 rounded-full text-xs">Active</span>
                    </td>
                </tr>
            </tbody>
        </table>
    </section>
</div>
{% endblock %}