{% extends 'base.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}
<div class="w-11/12 lg:w-3/5 mx-auto">
    <section class="my-3">
        <div class="">
            <div class="grid grid-cols-3 gap-2 text-white ">
                <div class="flex flex-col h-20 p-2 bg-purple-500 ">
                    <p>Document <i class="fas fa-wallet"></i></p>
                    <p class="mt-auto ml-auto"><span class="counter">0</span></p>
                </div>
                <div class="flex flex-co h-20 p-2 bg-red-500">
                    <p>Type <i class="fas fa-cog"></i></p>
                    <p class="mt-auto ml-auto"><span class="counter">0</span></p>
                </div>
                <div class="flex flex-col h-20 p-2 bg-indigo-900">
                    <p>Utilisateur <i class="fas fa-users-cog"></i></p>
                    <p class="mt-auto ml-auto"><span class="counter" >0</span></p>
                </div>
            </div>
        </div>
    </section>
    <section class="my-3">
        <div class="">
            <div class="grid grid-cols-3 gap-2 text-white ">
                <div class="flex flex-col h-20 p-2 bg-green-500 ">
                    <p>Deplacement <i class="fas fas fa-arrows-alt-h"></i></p>
                    <p class="mt-auto ml-auto"><span class="counter">0</span></p>
                </div>
                <div class="flex flex-co h-20 p-2 bg-pink-900">
                    <p>Sortie <i class="fas fa-arrow-right"></i></p>
                    <p class="mt-auto ml-auto"><span class="counter">0</span></p>
                </div>
                <div class="flex flex-col h-20 p-2 bg-yellow-500">
                    <p>Retour <i class="fas fa-arrow-left"></i></p>
                    <p class="mt-auto ml-auto"><span class="counter" >0</span></p>
                </div>
            </div>
        </div>
    </section>
    <section class="my-3 border border-gray-300 shadow-lg p-3">
        <h2 class="mb-3 text-xl font-semibold">Deplacement en attente de confirmation de sortie</h2>
        <table class=" w-full">
            <thead>
            <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
                <th class="py-3 lg:px-6 text-left">Document</th>
                <th class="py-3 lg:px-6 text-center">Quantité</th>
                <th class="py-3 lg:px-6 text-left">Utilisateur</th>
                <th class="py-3 lg:px-6 text-center">Date</th>
                <th class="py-3 lg:px-6 text-center">Status</th>
                <th class="py-3 lg:px-6 text-center">Actions</th>
            </tr>
            </thead>
            <tbody class="text-gray-600 text-sm font-light">
            <tr class="border-b border-gray-200 hover:bg-gray-100">
                <td class="py-3 lg:px-6 text-left whitespace-nowrap">
                    <div class="flex items-center">
                        <span class="font-medium">React Project</span>
                    </div>
                </td>
                <td class="py-3 lg:px-6 text-left whitespace-nowrap">
                    <div class="flex items-center">
                        <span class="font-medium">2</span>
                    </div>
                </td>
                <td class="py-3 lg:px-6 text-left">
                    <div class="flex items-center">
                        <span>Eshal Rosas</span>
                    </div>
                </td>
                <td class="py-3 lg:px-6 text-center">
                    <span>11 jan 2021</span>
                </td>
                <td class="py-3 lg:px-6 text-center">
                    <span class="bg-purple-200 text-purple-600 py-1 px-3 rounded-full text-xs">Active</span>
                </td>
                <td class="py-3 lg:px-6 text-center">
                    <div class="flex item-center justify-center">
                        <div class="">

                            <label
                                    for="toogleA"
                                    class="flex items-center cursor-pointer"
                            >
                                <!-- toggle -->
                                <div class="relative">
                                    <!-- input -->
                                    <input id="toogleA" type="checkbox" value="1" class="sortie sr-only" />
                                    <!-- line -->
                                    <div class="w-10 h-4 bg-gray-400 rounded-full shadow-inner"></div>
                                    <!-- dot -->
                                    <div class="lol dot absolute w-6 h-6 bg-white rounded-full shadow -left-1 -top-1 transition"></div>
                                </div>
                            </label>

                        </div>
                    </div>
                </td>
            </tr>
            </tbody>
        </table>
    </section>
    <section class="my-3 border border-gray-300 shadow-lg p-3">
        <h2 class="mb-3 text-xl font-semibold">Document en attente de confirmation de retour</h2>
        <table class="min-w-full">
            <thead>
            <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
                <th class="py-3 lg:px-6 text-left">Document</th>
                <th class="py-3 lg:px-6 text-left">Utilisateur</th>
                <th class="py-3 lg:px-6 text-center">Date</th>
                <th class="py-3 lg:px-6 text-center">Status</th>
                <th class="py-3 lg:px-6 text-center">Actions</th>
            </tr>
            </thead>
            <tbody class="text-gray-600 text-sm font-light">
            <tr class="border-b border-gray-200 hover:bg-gray-100">
                <td class="py-3 lg:px-6 text-left whitespace-nowrap">
                    <div class="flex items-center">
                        <span class="font-medium">React Project</span>
                    </div>
                </td>
                <td class="py-3 lg:px-6 text-left">
                    <div class="flex items-center">
                        <span>Eshal Rosas</span>
                    </div>
                </td>
                <td class="py-3 lg:px-6 text-center">
                    <span>11 jan 2021</span>
                </td>
                <td class="py-3 px-6 text-center">
                    <span class="bg-purple-200 text-purple-600 py-1 px-3 rounded-full text-xs">Active</span>
                </td>
                <td class="py-3 lg:px-6 text-center">
                    <div class="flex item-center justify-center">
                        <div class="">

                            <label
                                    for="toogleB"
                                    class="flex items-center cursor-pointer"
                            >
                                <!-- toggle -->
                                <div class="relative">
                                    <!-- input -->
                                    <input id="toogleB" type="checkbox" value="1" class="retour sr-only" />
                                    <!-- line -->
                                    <div class="w-10 h-4 bg-gray-400 rounded-full shadow-inner"></div>
                                    <!-- dot -->
                                    <div class="lol dot absolute w-6 h-6 bg-white rounded-full shadow -left-1 -top-1 transition"></div>
                                </div>
                            </label>

                        </div>
                    </div>
                </td>
            </tr>
            </tbody>
        </table>
    </section>
    <section class="my-3 border border-gray-300 shadow-lg p-3">
        <h2 class="mb-3 text-xl font-semibold">Nouveaux Document</h2>
        <table class="min-w-full">
            <thead>
            <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
                <th class="py-3 lg:px-6 text-left">Nom</th>
                <th class="py-3 lg:px-6 text-left">Marque</th>
                <th class="py-3 lg:px-6 text-center">Quantité</th>
                <th class="py-3 lg:px-6 text-center">Disponibilité</th>
            </tr>
            </thead>
            <tbody class="text-gray-600 text-sm font-light">
            <tr class="border-b border-gray-200 hover:bg-gray-100">
                <td class="py-3 lg:px-6 text-left whitespace-nowrap">
                    <div class="flex items-center">
                        <span class="font-medium">React Project</span>
                    </div>
                </td>
                <td class="py-3 lg:px-6 text-left">
                    <div class="flex items-center">
                        <span>Eshal Rosas</span>
                    </div>
                </td>
                <td class="py-3 lg:px-6 text-center">
                    <span>11 jan 2021</span>
                </td>
                <td class="py-3 px-6 text-center">
                    <span class="bg-purple-200 text-purple-600 py-1 px-3 rounded-full text-xs">Active</span>
                </td>
            </tr>
            </tbody>
        </table>
    </section>
</div>
{% endblock %}
